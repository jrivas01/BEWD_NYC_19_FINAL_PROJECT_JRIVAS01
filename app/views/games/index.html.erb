<div class="small-2 columns medium-3 columns large-3 columns">
<p>
<%= form_tag search_path, method: "GET" do |f| %>
    <%= label_tag(:q, "Search for a game:") %>
    <%= text_field_tag(:q, params[:q]) %>
    <%= submit_tag("Search") %>
<% end %>
</p>
<br/>

</div>
<center>
<ul class="small-block-grid-1 medium-block-grid-2 large-block-grid-5">
<% @games.each_with_index do | game, index | %>

<li>
<%= link_to "#{game.name}", game_path(game.id) %> <br/>
<%= link_to (image_tag @boxart[index]["box"]["large"]), game_path(game.id) %> <br/>
<%= link_to "View Streams", stream_path(id: game["name"]) %>
</li>

<% end %>
</ul>
<br/>
</center>