<h1>STREAMS</h1>

<h2><%= link_to "TWITCH", "http://www.twitch.tv/" %></h2>

<% @twitch_streams.each do | games | %>    
    <%= games[0]["game"] %> <br/>
    <center>
    <ul class="small-block-grid-1 medium-block-grid-2 large-block-grid-3">
    <% games.each_with_index do | stream, index | %>
        <li>
        <div class="twitch_stream" id= <%="#{stream["channel"]["name"]}"%>>
            <%= image_tag stream["preview"]["medium"] %>
            <noscript><%= link_to (image_tag stream["preview"]["medium"]), 
                                    stream_path(stream["channel"]["display_name"]) %> </noscript>
        </div>                         
        <br/>
        <%= link_to stream["channel"]["status"], stream["channel"]["url"] %> <br/>
        <%= "Viewers: #{stream["viewers"]} on " %> 
        <%= link_to stream["channel"]["display_name"], stream["channel"]["url"] %> <br/>
        </li>
    <% end %>
    </ul>
    </center>
<% end %>

<script>

var videos = document.getElementsByClassName("twitch_stream"); 
 
for (var i=0; i<videos.length; i++) {
  
  var twitch_stream = videos[i];
    
  twitch_stream.onclick = function() {
 
    var iframe = document.createElement("iframe");
    iframe.setAttribute("src", "http://www.twitch.tv/" + this.id + "/embed");
    iframe.setAttribute("width", "620");
    iframe.setAttribute("height", "378");
    iframe.setAttribute("frameborder", "0");
    iframe.setAttribute("scrolling", "no");
       
    this.parentNode.replaceChild(iframe, this);
 
  };
}
</script>

<h2><%= link_to "HITBOX", "http://www.hitbox.tv/" %></h2>
<% @hitbox_streams.each do | games | %>
    <%= games[0][:game] %><br/>
    <center>
    <ul class="small-block-grid-1 medium-block-grid-2 large-block-grid-3">
    <% games.each do | stream | %>
        <li>
        <%= link_to (image_tag stream[:channel_thumb]), "http://www.hitbox.tv/#{stream[:streamer_name]}" %><br/>
        <%= link_to stream[:channel_name], "http://www.hitbox.tv/#{stream[:streamer_name]}" %> <br/>
        <%= "Viewers: #{stream[:viewer_count]} on " %> 
        <%= link_to stream[:streamer_name], "http://www.hitbox.tv/#{stream[:streamer_name]}" %><br/>
        </li>
    <% end %>
    </ul>
    </center>
<% end %>